@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<hr />
<div class="row">
    <div class="col-2">
        <div class="list-group list-group-flush">
            <a asp-page="Index" class="btn btn-default btn-link list-group-item list-group-item-action">Profile</a>
            <a asp-page="ChangePassword" class="btn btn-default btn-link list-group-item list-group-item-action active">Change Password</a>
            <a asp-page="DeletePersonalData" class="btn btn-default btn-link list-group-item list-group-item-action">Delete Account</a>
        </div>
    </div>
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" class="form-control" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <a asp-page="./Index" class="btn btn-default">Cancel</a>
            <button type="submit" class="btn btn-success">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
