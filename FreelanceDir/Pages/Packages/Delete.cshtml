@page
@model FreelanceDir.Pages.Packages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Delete</h3>
<hr />
<div class="jumbotron bg-light text-center">
    <h4>Are you sure you want to delete <strong>@Model.Package.Name</strong> package?</h4>
</div>

<form method="post" class="text-center">
    <input type="hidden" asp-for="Package.Id" />
    <a asp-page="../Edit" asp-route-id="@Model.Package.GigId" class="btn btn-default">Cancel</a>
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
